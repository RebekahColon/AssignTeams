@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Random Team Generator</h2>
        <p>
            The Random Team Generator will take your list of individuals and inputs and create random teams.
            This is helpful for team building events at your place at work when you want to shape your teams in different and random ways!
        </p>
        <hr />
    </div>

    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>Upload your List of Individuals:</label>
                <input type="file" />
            </div>
            <div class="form-group">
                <label>Enter Number of Teams:</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Enter Size per Team:</label>
                <input class="form-control" />
            </div>
            <button type="submit" class="btn-default">Submit</button>
        </form>
    </div>
</div>
